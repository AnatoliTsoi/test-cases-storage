{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TestCase Front Matter",
  "type": "object",
  "required": ["id", "title", "platform", "preconditions", "steps"],
  "properties": {
    "id": { "type": "string", "pattern": "^TC-[A-Z]{3}-\\d{4,}$" },
    "title": { "type": "string", "minLength": 5 },
    "platform": { "enum": ["web", "ios", "android"] },
    "jiraTicket": {
      "anyOf": [
        { "type": "string", "pattern": "^[A-Z][A-Z0-9]+-\\d+$" },
        { "type": "string", "format": "uri" }
      ]
    },
    "preconditions": {
      "type": "array",
      "items": { "type": "string", "minLength": 2 }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "patternProperties": {
          "^[1-9]\\d*$": { "type": "string", "minLength": 2 },
          "^expected$": { "type": "string", "minLength": 2 }
        },
        "additionalProperties": false,
        "minProperties": 1,
        "maxProperties": 2
      }
    },
    "automationId": { "type": "string" }
  },
  "additionalProperties": false
}
